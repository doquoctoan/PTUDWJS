<!-- Product Details -->
<div class="container my-3">
    <div class="row">
        <div class="col-md-3 ">
            <div class="text-center">
                <img src="/images/{{Product.imagepath}}" alt="{{Product.name}}" class="img-fluid">
            </div>
            <div class="my-4">
                <div class="book-price pull-left">${{Product.price}}</div>
                <button type="submit" class="btn btn-success pull-right btn-cart-add" data-id="{{Product.id}}">Add to cart</button>
            </div>
        </div>
        <div class="col-md-9">
            <h3 class="my-3">{{Product.name}}</h3>
            <p>{{Product.summary}}</p>
            <h3 class="my-3">Book Details</h3>
            <p>{{Product.description}}</p>
        </div>
    </div>
</div>
<div class="container my-3">
    <h3>Comments</h3>
    <form id="form-comment-add" role="form" data-product="{{Product.id}}">
        <div class="form-group">
            <label for="comment">Add a new comment here</label>
            <div class="form-row">
                <div class="col-lg-11 col-md-10">
                    <input type="text" class="form-control" id="input-comment-add" placeholder="Enter your comment">
                </div>
                <div class="col-lg-1 col-md-2">
                    <button type="submit" class="btn btn-success">Post</button>
                </div>
            </div>
        </div>
    </form>
    <form role="form" id="form-comment-edit">
        <div class="form-group">
            <label for="editcomment">Edit your comment here</label>
            <div class="form-row">
                <div class="col-lg-10 col-md-8">
                    <input type="text" class="form-control" id="input-comment-edit" placeholder="Edit your comment">
                </div>
                <input type="hidden" id="input-comment-id" />
                <div class="col-lg-1 col-sm-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
                <div class="col-lg-1 col-sm-2">
                    <button class="btn btn-secondary btn-comment-cancel">Cancel</button>
                </div>
            </div>
        </div>
    </form>
    <div id="comments">
        {{#each Product.Comments}}
        <div class="row mx-1 mb-2 p-2  bg-light border-success" style="border-left: 6px solid; border-radius: 3px">
            <div class="col-10">
                <p class="text-justify">- asa</p>
            </div>
        </div>
        {{/each}}
    </div>


</div>